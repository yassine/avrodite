<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%green([%date]) %highlight([%level]) [%t] %cyan([%C:%L]) %msg%n</pattern>
    </encoder>
  </appender>
  <logger name="com.mitchellbosecke.pebble.loader.ClasspathLoader" level="INFO" />
  <logger name="org.jboss.logging.LoggerProviders" level="INFO" />
  <logger name="io.favro.core.compiler" level="INFO" />
  <logger name="org.sonatype.maven.polyglot.groovy.builder.ModelBuilder" level="INFO" />
  <logger name="org.eclipse.sisu.inject" level="INFO" />


  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
